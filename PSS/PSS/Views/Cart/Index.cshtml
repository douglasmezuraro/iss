@model IEnumerable<PSS.Models.Item>
@using PSS.Utils.Constants

@{
    ViewBag.Title = View.Index;
}

<h2>@View.Index</h2>

<p>
    @Html.ActionLink("Finalizar pedido", "Create", "PurchaseOrders")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Product.Id)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Product.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Product.Id)
            </td>
            <td>
                @Html.DisplayFor(m => item.Product.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(m => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.ActionLink(View.Edit, "Edit", new { id = item.Product.Id }) |
                @Html.ActionLink(View.Details, "Details", new { id = item.Product.Id }) |
                @Html.ActionLink(View.Delete, "Delete", new { id = item.Product.Id })
            </td>
        </tr>
    }

</table>

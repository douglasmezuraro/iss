@model IEnumerable<PSS.Models.Item>
@using PSS.Utils.Constants

@{
    ViewBag.Title = View.Index;
}

<h2>@View.Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink(View.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(View.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(View.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@model PSS.Models.PurchaseOrder
@using PSS.Utils.Constants
@using PSS.Models
@using PSS.Utils

@{
    ViewBag.Title = View.Create;
}

<h2>@View.Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Html.DisplayNameForModel()</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-default">
            <div class="panel-heading">@Html.DisplayNameFor(model => model.Items)</div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.Id)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Product.Description)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Quantity)
                        </th>

                        <th>
                            @Html.DisplayFor(model => Model.Items.FirstOrDefault().Product.Price)
                        </th>
                    </tr>

                    @foreach (var item in Global.Cart.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Description)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Price)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalPrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <input type="submit" value="@View.Create" class="btn btn-default" />
        </div>
    </div>
}

<br />
<div>
    @Html.ActionLink(View.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

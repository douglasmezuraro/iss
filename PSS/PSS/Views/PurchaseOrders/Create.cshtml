@model PSS.Models.PurchaseOrder
@using PSS.Utils.Constants
@using PSS.Utils

@{
    ViewBag.Title = View.Create;
}

<h2>@View.Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>@Html.DisplayNameForModel()</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel panel-default">
        <div class="panel-heading">@Html.DisplayNameFor(model => model.Items)</div>
        <div class="panel-body">
            <table class="table">
                @foreach (var item in Global.Cart.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Description)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => Global.Cart.TotalValue)
        </dd>
    </dl>

        <div>
            <input type="submit" value="@View.Create" class="btn btn-default" />
        </div>
</div>
}

<br />
<div>
    @Html.ActionLink(View.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
